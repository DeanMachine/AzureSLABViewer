@model IEnumerable<AzureSLABViewer.Web.Models.SLABLogsTable>
@{
    ViewBag.Title = "Logs";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <th>Level</th>
            <th>Provider Name</th>
            <th>Event Date/Time UTC</th>
            <th>Event ID</th>
            <th>Instance Name</th>
            @*<th>Keywords</th>
            <th>Task</th>
            <th>Opcode</th>*@
            <th>Message</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>
                    @switch (log.Level)
                    {
                        case 0:
                            <span class="label label-default">Log Always</span>
                            break;
                        case 1:
                            <span class="label label-danger">Critical</span>
                            break;
                        case 2:
                            <span class="label label-danger">Error</span>
                            break;
                        case 3:
                            <span class="label label-warning">Warning</span>
                            break;
                        case 4:
                            <span class="label label-info">Info</span>
                            break;
                        case 5:
                            <span class="label label-default">Verbose</span>
                            break;
                        default:
                            <span class="label label-default">@log.Level</span>
                            break;
                    }
                </td>
                <td>@log.ProviderName</td>
                <td>@log.EventDate</td>
                <td>@log.EventId</td>
                <td class="instance-name">@log.InstanceName</td>
                @*<td>@log.Keywords</td>
                <td>@log.Task</td>
                <td>@log.Opcode</td>*@
                <td>
                    @if (log.Message.Length > 250)
                    {
                        <span class="truncated">@log.Message.Substring(0, 250) ...</span>
                    }
                    else
                    {
                        <span>@log.Message</span>
                    }
                </td>
                <td>
                    <a href="/Log/Details?pk=@log.PartitionKey&rk=@log.RowKey">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>